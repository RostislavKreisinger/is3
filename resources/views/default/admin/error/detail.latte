<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <form method="POST" >
                        {csrf_field()|noescape}
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Resource</th>
                                    <td>({n $error->resource_id}) {$resource->name}</td>
                                </tr>
                                <tr>
                                    <th>Btf</th>
                                    <td>{n $error->btf_for_user}</td>
                                </tr>
                                <tr>
                                    <th>Error</th>
                                    <td>{n $error->error}</td>
                                </tr>
                                <tr>
                                    <th>Code</th>
                                    <td>
                                        <div class="form-group">
                                            <input name="code" class="form-control" value="{$error->code}">
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Solution</th>
                                    <td>
                                        <div class="form-group">
                                            <textarea name="solution" rows="5" class="form-control">{n $error->solution}</textarea>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-default">Submit</button>
                                        </div>                                    
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
        </div>
