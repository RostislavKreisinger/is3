<div id="wrapper">
    {view 'default.views.menu'}

    <div id="page-wrapper">
        <div class="row messages" style="padding-top: 10px;">
            <div class="col-lg-12 col-md-12">
                <div n:foreach="$messages->getAll() as $message" class="alert alert-{$message->getClass()} alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                    {$message|noescape}
                </div>              
            </div>
        </div>
        <div class="row breadcrumbs">
            <div class="col-lg-12 col-md-12">
                <span n:foreach="$breadcrumbs as $key => $breadcrumb">
                    <a href="{$breadcrumb->getUrl()}">{$breadcrumb->getBtf()}</a> 
                    <span n:if="$key+1 !== count($breadcrumbs)" class="fa fa-caret-right"></span>
                </span>
            </div>
        </div>
        {view $body}
    </div>
</div>
{view 'default.scripts'}
<script src="{js 'libs/jquery.tree-multiselect.min.js'}"></script>
<script>
    $("select#acl").treeMultiselect({ sectionDelimiter: '.' });
</script>

